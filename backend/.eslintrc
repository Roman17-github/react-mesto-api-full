{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true,
        "node": true,
        "amd": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "no-underscore-dangle": ["error", { "allow": ["_id"]}],
        "linebreak-style": ["error", "windows"],
        "arrow-body-style": 0,
        "object-curly-spacing": 0,
        "object-curly-newline": 0,
        "eol-last": 0
    }
}